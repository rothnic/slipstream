{
  "name": "slipstream",
  "version": "0.1.0",
  "description": "A persistent TypeScript CLI wrapper for @opencode-ai/sdk with instant command execution via background daemon",
  "main": "dist/client/index.js",
  "bin": {
    "slip": "./bin/slip"
  },
  "type": "module",
  "scripts": {
    "build": "tsup",
    "dev": "tsup --watch",
    "test": "vitest",
    "link": "npm link",
    "typecheck": "tsc --noEmit"
  },
  "keywords": [
    "cli",
    "opencode",
    "ai",
    "terminal",
    "daemon"
  ],
  "author": "Nick Roth",
  "license": "MIT",
  "dependencies": {
    "@drizzle-team/brocli": "^0.11.0",
    "@opencode-ai/sdk": "^1.0.203",
    "chalk": "^5.3.0",
    "commander": "^12.1.0",
    "fs-extra": "^11.2.0",
    "ora": "^8.0.1",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@types/fs-extra": "^11.0.4",
    "@types/node": "^20.11.0",
    "tsup": "^8.0.1",
    "typescript": "^5.3.3",
    "vitest": "^1.2.0"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
